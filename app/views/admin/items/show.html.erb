<h4 class="page-title">商品詳細</h4>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "150x100" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-4">商品名</div>
        <div class="col-md-8">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">商品説明</div>
        <div class="col-md-8">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">税込価格<br>(税抜価格)</div>
        <div class="col-md-8">
          <%= @item.add_tax_price.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>)円
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">販売ステータス</div>
        <div class="col-md-8">
          <% if @item.is_active == true %>
            <div class="text-success font-weight-bold">販売中</div>
          <% else %>
            <div class="text-secondary font-weight-bold">販売停止中</div>
          <% end %>
        </div>
      </div>
    </div>
    <button type="button" class="btn btn-success confirm-button">
      <%= link_to '編集する', edit_admin_item_path(@item.id) %>
    </button>
  </div>
</div>