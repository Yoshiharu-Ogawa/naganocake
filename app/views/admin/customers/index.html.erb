
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="page-title">会員一覧</h4>
      <table class="table">
        <thead class="thead-color">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: '', method: :get do %>
                <% name = customer.last_name + customer.first_name %>
                <%= name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <!--<td></td>-->
            <td>
              <% if customer.is_deleted == false %>
                <div class="text-success font-weight-bold">有効</div>
              <% else %>
                <div class="text-secondary font-weight-bold">退会</div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>