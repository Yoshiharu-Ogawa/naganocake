<h4 class="page-title">管理者ログイン</h4>

<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= form_with model: @admin, url: admin_session_path do |f| %>
<div class="container" style="margin: 20px auto;">
  <div class="field row" style="margin-bottom: 10px;">
    <%= f.label :email, 'メールアドレス', class: "col-3" %>
    <%= f.email_field :email, class: "col-5", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field row" style="margin-bottom: 20px;">
    <%= f.label :password, 'パスワード', class: "col-3" %>
    <%= f.password_field :password, class: "col-5", autocomplete: "current-password" %>
  </div>


  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class="actions row">
    <div class="col-3"></div>
    <%= f.submit "ログイン", class: "btn btn-primary btn-sm col-2", style: "margin-left: 0;" %>
  </div>
</div>
<% end %>

<%= render "admin/shared/links" %>
