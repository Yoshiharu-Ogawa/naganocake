
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="page-title">商品一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税込価格</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id), class: '', method: :get do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td></td>
            <td>
              <% if item.is_active == true %>
                <div class="text-success font-weight-bold">販売中</div>
              <% else %>
                <div class="text-secondary font-weight-bold">販売停止中</div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>