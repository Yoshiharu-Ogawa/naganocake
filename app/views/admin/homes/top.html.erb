<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="page-title">注文履歴一覧</h4>
      <table class="table">
        <thead class="thead-color">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @orders.each do |order| %>
              <td><%= order.created_at %></td>
              <td>
                <%= order.customer.name %>
              </td>
              <!--sum(:quantity)とすることで、複数ある個々の商品の個数の合計をだす-->
              <td><%= order.order_details.sum(:quantity) %></td>
              <td></td>
              <td>

              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>